@model SPATest.Models.Country

@{
  ViewData["Name"] = "Country";
}

<h2>Country - @Html.DisplayFor(model => model.name)  <a asp-action="Region" asp-route-id="@Model.region">(@Html.DisplayFor(model => model.region)</a>, <a asp-action="SubRegion" asp-route-id="@Model.subregion">@Html.DisplayFor(model => model.subregion))</a></h2>

<div>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Capital
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.capital)
    </dd>
    <dt class="col-sm-2">
      Population
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.population)
    </dd>
    <dt class="col-sm-2">
      Offical Currencies
    </dt>
    <dd class="col-sm-10">
      <table>
        <tbody>
          @foreach (var item in Model.currencies)
          {
            <tr>
              <td>@Html.DisplayFor(modelItem => item.name)</td>
            </tr>
          }
        </tbody>
      </table>

    </dd>
    <dt class="col-sm-2">
      Offical Languages
    </dt>
    <dd class="col-sm-10">
      <table>
        <tbody>
          @foreach (var item in Model.languages)
          {
            <tr>
              <td>@Html.DisplayFor(modelItem => item.name)</td>
            </tr>
          }
        </tbody>
      </table>
    </dd>
    <dt class="col-sm-2">
      Border Countries
    </dt>
    <dd class="col-sm-10">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Region</th>
            <th>Sub-Region</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model.BorderCountries)
          {
            <tr>
              <td><a asp-action="Country" asp-route-id="@item.alpha3Code">@Html.DisplayFor(modelItem => item.name)</a></td>
              <td><a asp-action="Region" asp-route-id="@item.region">@Html.DisplayFor(modelItem => item.region)</a></td>
              <td><a asp-action="SubRegion" asp-route-id="@item.subregion">@Html.DisplayFor(modelItem => item.subregion)</a></td>
            </tr>
          }
        </tbody>
      </table>

    </dd>
  </dl>
</div>



