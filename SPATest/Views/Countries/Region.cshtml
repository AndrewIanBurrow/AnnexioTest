@model SPATest.Models.Region

@{
  ViewData["Name"] = "Region";
}

<h2>Region - @Html.DisplayFor(model => model.name)</h2>

<div>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Population
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.population)
    </dd>
    <dt class="col-sm-2">
      Sub-regions
    </dt>
    <dd class="col-sm-10">
      <table>
        <tbody>
          @foreach (var item in Model.SubRegions)
          {
            <tr>
              <td><a asp-action="SubRegion" asp-route-id="@item">@Html.DisplayFor(modelItem => item)</a></td>
            </tr>
          }
        </tbody>
      </table>
    </dd>
    <dt class="col-sm-2">
      Countries
    </dt>
    <dd class="col-sm-10">
      <table className='table table-striped' aria-labelledby="tabelLabel">
        <tbody>
          @foreach (var item in Model.Countries)
          {
            <tr>
              <td><a asp-action="Country" asp-route-id="@item.alpha3Code">@Html.DisplayFor(modelItem => item.name)</a></td>
            </tr>
          }
        </tbody>
      </table>
    </dd>
  </dl>
</div>



